
<div class="container">
  <div class="row">
    <div class="col-lg-3 text-center text-lg-left">
      <h1>マイページ</h1>
      <div><% if @user.image.attached? %>
          <%= image_tag @user.image, size: "200x200" %>
        <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
        <% end %>
      </div>
      <div class="mt-3">
        <h5>ニックネーム：<%= @user.name %></h5>
      </div>
      <div class="mt-3">
        <h5>メールアドレス：<%= @user.email %></h5>
      </div>
      <div class="mt-3">
        <h5>誕生日：<%= @user.birthday %></h5>
      </div>
      <div class="mt-3">
        <h5>性別：<%= @user.gender_id %></h5>
      </div>
      <div>
        <%= link_to "編集する", edit_user_path(@user), class: "btn btn-outline-danger mx-auto my-1" %>&emsp;
        <%=link_to "下書き一覧", confirm_user_path(@user), class: "btn btn-outline-danger mx-auto my-1"%>
        <%#= link_to "パスワードを変更する", edit_customer_registration_path, class: "btn btn-outline-danger mx-auto my-1" %>
      </div>
    </div>


    <div class="col-lg-9">
     <div class="center"><h1><%= @user.name %>さんの投稿一覧</h1></div>
      <div class="row">
        <% @books.each do |book| %>
          <div class="col-md-4 mb-3">
            <div class="card">
              <div class="card-header">
                <%= book.user&.name || '名無し' %>
              </div>
              <% if book.image.attached? %>
                <%= image_tag book.image, class: 'card-img-top card-img-preview' %>
              <% else %>
                <%= image_tag 'no_image', class: 'card-img-top card-img-preview' %>
              <% end %>
              <div class="card-body">
                <h6 class="card-title">
                  <%= link_to book.title, book_path(book.id) %>
                </h6>
                <div class="card-text">
                  <div>
                    <% book.tags.each do |tag| %>
                      <span class="badge badge-secondary mr-2"><%= tag.name %></span>
                    <% end %>
                  </div>
                  <div>
                    <small class="text-black-50">
                      <%= link_to "#{book.book_comments.count} コメント", book_path(book.id) %>
                    </small>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <small class="text-black-50">
                        Follow: <%= book.user.followings.count %>
                      </small>
                    </div>
                    <div class="col-md-6">
                      <small class="text-black-50">
                        Follower: <%= book.user.followers.count %>
                      </small>
                    </div>
                  </div>
                </div>
              </div>
              <% if current_user.id != book.user_id %>
                <div class="card-footer text-right">
                  <small>
                    <% if current_user.following?(book.user) %>
                      <%= link_to "フォロー外す", user_relationships_path(book.user), method: :delete %>
                    <% else %>
                      <%= link_to "フォローする", user_relationships_path(book.user), method: :post %>
                    <% end %>
                  </small>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>


