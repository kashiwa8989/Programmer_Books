<div class="container">
  <div class="row">
    <div class="col-lg-3 text-center text-lg-left">
      <h1>マイページ</h1>
      <div><% if @user.image.attached? %>
          <%= image_tag @user.image, style: "border-radius: 50%; width: 200px; height: 200px; object-fit:cover;" %>
        <% else %>
          <%= image_tag 'no_image', style: "border-radius: 50%; width: 200px; height: 200px; object-fit:cover;" %>
        <% end %>
      </div>
      <div class="mt-3">
        <h5>ニックネーム：<%= @user.name %></h5>
      </div>
      <div class="mt-3">
        <% if @user == current_user %>
        <h5>メールアドレス：<%= @user.email %></h5>
        <% end %>
      </div>
      <div class="mt-3">
        <h5>誕生日：<%= @user.birthday %></h5>
      </div>
      <div class="mt-3">
        <h5>性別：<%= @user.gender_id %></h5>
      </div>
      <div>
        <% if @user == current_user %>
        <%= link_to "会員情報編集", edit_user_path(@user), class: "btn btn-outline-danger mx-auto my-1" %>&emsp;
        <%=link_to "下書き一覧", confirm_user_path(@user), class: "btn btn-outline-danger mx-auto my-1"%>
        <% end %>
      </div>
    </div>

    <div class="col-lg-9">
     <div class="center"><h1><%= @user.name %>さんの投稿一覧</h1></div>
      <%= render 'public/books/index',books: @books %>
    </div>
  </div>
</div>
