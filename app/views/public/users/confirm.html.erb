<div class="container">
  <div class="table-responsive">
    <h1>下書き一覧</h1>
    <table class='table'>
      <thead>
        <tr>
          <th></th>
          <th nowrap>下書きの本</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <% if book.image.attached? %>
                <%= image_tag book.image, style: "border-radius: 50%; width: 80px; height: 80px; object-fit:cover;"%>
              <% else %>
                <%= image_tag 'no_image', style: "border-radius: 50%; width: 80px; height: 80px; object-fit:cover;"%>
              <% end %>
            </td>
            <td>
              <%=link_to book_path(book.id) do %>
                <%= book.title.truncate(25) %>
              <% end %>
            </td>
          </tr>
       <% end %>
      </tbody>
  </div>
</div>
