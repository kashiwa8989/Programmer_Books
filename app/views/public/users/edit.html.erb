<div class="container my-5">
  <div class="row">
    <div class="offset-1">
      <!--%= render "public/shared/error_messages", resource: resource %>-->
      <h2 class="red-border px-3 pb-1">会員情報編集</h2>
    </div>
  </div>

  <div class="row my-3">
    <div class="offset-3 col-6">

    <%#= form_with model: @user, url: user_registration_path do |f| %>
    <%= form_for(@user) do |f| %>

      <div class="form-group">
        <%= f.label :プロフィール画像, class: "brown-border px-3" %>
        <%= f.file_field :image, accept: "image/*", class: ""%>
      </div>
      <div class="form-group">
        <%= f.label :ニックネーム, class: "brown-border px-3" %>
        <%= f.text_field :name, class: "form-control offset-1 col-4"%>
      </div>

    <div class="form-group">
        <%= f.label :メールアドレス, class: "brown-border px-3" %>
        <%= f.email_field :email, class: "form-control offset-1 col-8"%>
    </div>

    <div class="form-group">
        <%= f.label :生年月日, class: "brown-border px-3" %>
        <%= f.date_select :birthday, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 5), default: Date.new(1989, 1, 1), class: "form-control offset-1 col-8"%>
    </div>

    <div class="form-group">
        <%= f.label :性別, class: "brown-border px-3" %>
        <%= f.label :男性 %>
      　<%= f.radio_button :gender_id, :男性 %>
        <%= f.label :女性 %>
        <%= f.radio_button :gender_id, :女性 %>
    </div>

    <div class="row">
        <%= f.submit "編集内容を保存する", class: "btn btn-outline-danger offset-3 mt-3" %>&emsp;
        <%= link_to "退会する" , unsubscribe_path(@user.id),class: "btn btn-outline-danger mt-auto" %>
    </div>
   <% end %>
    </div>
  </div>
</div>
