<div class = "container" >
<h1>本の新規投稿</h1>

<%= form_with model:@book, url: '/books', method: :post do |f| %>
<h4>本の名前</h4>
<%= f.text_field:title%>

<h4>本の画像</h4>
<%= f.file_field :image, accept: "image/*"%>

<h4>本の著者</h4>
<%= f.text_field:author%>

<div class="check_box">
    <span>タグ</span>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
     <div>
       <%= tag.label do %>
         <%= tag.check_box %>
         <%= tag.text %>
       <% end %>
     </div>
   <% end %>
 </div>

<h4>本の詳細</h4>
<%= f.text_area :introduction %>

<%= f.submit '投稿' %>
<% end %>
</div>