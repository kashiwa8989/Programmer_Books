<div class = "container" >
<h1>本の新規投稿</h1>

<%= form_with model:@book, url: '/books', method: :post do |f| %>
<h4>本の名前</h4>
<%= f.text_field:title%>

<h4>本の画像</h4>
<%= f.file_field :image, accept: "image/*"%>

<h4>本の著者</h4>
<%= f.text_field:author%>

<div class="check_box">
    <span>タグ</span>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
     <div>
       <%= tag.label do %>
         <%= tag.check_box %>
         <%= tag.text %>
       <% end %>
     </div>
   <% end %>
 </div>

<h4>本の詳細</h4>
<%= f.text_area :introduction %>

<div class="form-group row">
    <%=f.label:"公開範囲",class:"col-sm-4"%>
    <div style="padding-right:20px;">
    <%= f.radio_button :is_draft, :false, checked: false %>
    <%= f.label :is_draft, "公開", {value: :false, style: "display: inline-block;"} %></div>
    <div style="padding-right:20px;">
    <%= f.radio_button :is_draft, :true %>
    <%= f.label :is_draft, "下書き保存", {value: :true, style: "display: inline-block;"} %></div>
</div>
<%= f.submit '投稿' %>
<% end %>
</div>