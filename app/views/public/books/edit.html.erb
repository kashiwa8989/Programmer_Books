<div class="container">
  <div class="row">
    <% if @book.errors.any? %>
        <%= @book.errors.count %>件のエラーが発生しました
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    <div class="offset-1">
      <h2 class="red-border px-3 pb-1">投稿編集</h2>
    </div>
  </div>

  <div class="row my-3">
    <div class="offset-3 col-6">
      <%= form_with model:@book, method: :patch do |f|%>

      <div class="form-group">
        <div class="row">
          <%= f.file_field :image, accept: "image/*"%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :本の名前, class: "brown-border px-3" %>
        <div class="row">
          <%= f.text_field :title, class: "form-control w-100"%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :本の著者, class: "brown-border px-3" %>
        <div class="row">
          <%= f.text_field :author, class: "form-control w-100"%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :本の詳細, class: "brown-border px-3" %>
        <div class="row">
          <%= f.text_area:introduction, class: "form-control", rows:"5" %>
        </div>
      </div>

      <div class="form-group row">
        <%=f.label:"公開範囲",class:"col-sm-4"%>
        <div style="padding-right:20px;">
        <%= f.radio_button :is_draft, :false ,checked: false %>
        <%= f.label :is_draft, "公開", {value: :false, style: "display: inline-block;"} %></div>
        <div style="padding-right:20px;">
        <%= f.radio_button :is_draft, :true %>
        <%= f.label :is_draft, "下書き保存", {value: :true, style: "display: inline-block;"} %></div>
      </div>

      <div class="row">
        <%= f.submit "編集内容を保存する", class: "btn btn-outline-danger offset-3 mt-3" %>&emsp;
      </div>
      <% end %>
    </div>
  </div>
</div>