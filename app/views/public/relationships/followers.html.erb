<h2>Follower Users</h2>
<% if @users.exists? %>
  <table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>ニックネーム</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <% if user.image.attached? %>
            <%= image_tag user.image, style: "border-radius: 50%; width: 200px; height: 200px; object-fit:cover;" %>
          <% else %>
            <%= image_tag 'no_image', style: "border-radius: 50%; width: 200px; height: 200px; object-fit:cover;" %>
          <% end %>
        </td>
        <td><%= user.name %></td>
        <td>
        <% if current_user != user%>
        <% if current_user.following?(user) %>
        <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %>
        <% else %>
        <%= link_to "フォローする", user_relationships_path(user.id), method: :post %>
        <% end %>
        <% end %>
        </td>
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <%#= render '/users/index', users: @users %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>