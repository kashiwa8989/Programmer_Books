<h2>Follow Users</h2>
<% if @users.exists? %>
<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>フォロー数</th>
      <th>フォロワー数</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%#= image_tag user.image, size: '50x50' %></td>
        <td><%= user.name %></td>
        <td><%= link_to user.followings.count,user_followings_path(current_user) %></td>
        <td><%= link_to user.followers.count,user_followers_path(current_user) %></td>
        <td>
        <% if current_user != user%>
        <% if current_user.following?(user) %>
        <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %>
        <% else %>
        <%= link_to "フォローする", user_relationships_path(user.id), method: :post %>
        <% end %>
        <% end %>
        </td>
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <%#= render '/users/index', users: @users %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>