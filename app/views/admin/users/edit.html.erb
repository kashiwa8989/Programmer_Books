<div><%= flash[:customer_updated_error] %></div>
<div class="container my-5">
  <div class="row">
    <div class="offset-1">
      <h2 class="red-border px-3 pb-1"><%= @user.name %>さんの会員ステータス編集</h2>
    </div>
  </div>

<div class="row my-3">
    <div class="offset-3 col-6">
    <%= form_for @user,url: admin_user_path(@user) do |f| %>
      <div class="form-group row">
    　　  <td>会員ID</td>
          <h5>
          <%= f.label @user.id, class: "col-sm-8" %>
          </h5>
      </div>

      <div class="form-group">
       <%= f.label :会員ステータス, class: "brown-border px-3" %>
        <td>
         <%= f.radio_button :is_deleted, false %>
         <%= f.label :is_deleted, "有効" %>
         <%= f.radio_button :is_deleted, true %>
         <%= f.label :is_deleted, "退会" %>
        </td>
      </div>

      <div class="row">
        <%= f.submit "編集内容を保存する", class: "btn btn-outline-danger offset-3 mt-3" %>
      </div>
    <% end %>
    </div>


</div>
</div>