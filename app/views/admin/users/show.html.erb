<div class="row">
	  <div class="offset-sm-4 col-sm-4">
	    <table class="table table-borderless table-hover">
	      <h1><%= @user.name %>さんの会員詳細</h1><br/>
	      <tr class="brown-border">
	        <td>会員ID</td>
	        <td>
	          <%= @user.id %>
	        </td>
	      </tr>

	      <tr class="brown-border">
	        <td>プロフィール画像</td>
	        <td>
	          <% if @user.image.attached? %>
            <%= image_tag @user.image, size: "50x50" %>
            <% else %>
            <%= image_tag 'no_image', size: "50x50" %>
            <% end %>
	        </td>
	      </tr>

	      <tr class="brown-border">
		    	<td>氏名</td>
		    	<td>
		    		<%= @user.name %>
		    	</td>
	      </tr>

	      <tr class="brown-border">
		    	<td>メールアドレス</td>
		    	<td><%= @user.email %></td>
	      </tr>

	      <tr class="brown-border">
		    	<td>誕生日</td>
		    	<td><%= @user.birthday %></td>
	      </tr>

	      <tr class="brown-border">
		    	<td>性別</td>
		    	<td><%= @user.gender_id %></td>
	      </tr>


        <tr class="brown-border">
          <td>会員ステータス</td>
	       <th><% if @user.is_deleted == false %>
          <p style="color: red;">有効</p>
          <% else %>
          <p style="color: black">退会</p>
          <% end %>
         </th>
        </tr>

        <tr class="brown-border">
          <td>
		    <%= link_to "会員ステータス変更", edit_admin_user_path(@user), class: "btn btn-outline-danger mx-auto my-1" %>&emsp;
		      </td>
		    </tr>
	    </table>
